/*搜索栏*/
.form1{
    width: 30%;
    margin: 0;
    float: right;
    line-height: 80px;
    margin-right: 60px;
    position: relative;
    top:20px;
    

}
.form1 input{
    background:transparent;
    width: 70%;
    height:30px;
    border-radius: 5px;
    color: #fff;
    border: 2px solid #c5464a;
    float: right;
    outline:none;
    transition:width 0.5s;
    -moz-transition:width 0.5s;
    -webkit-transition:width 0.5s; 
    -o-transition:width 0.5s;

}
.form1 input:focus{
    transition:ease;
    width: 100%;
    transition:width 0.5s;
    -moz-transition:width 0.5s;
    -webkit-transition:width 0.5s; 
    -o-transition:width 0.5s; 
}
.form1 button{
    width: 50px;
    height:33px;
    background: #c5464a;
    border: 0;
    position: absolute;
    right: 1px;
    bottom:1px;
    outline:none;
    cursor: pointer;
    color: rgb(185, 180, 180);
}


